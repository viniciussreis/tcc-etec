<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.localcode60.fragment.FragmentCodigo">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/edtInsiraCodigo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/edtCodigo"
        android:hint="@string/insiraCodigo"
        android:textAlignment="center"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/btnBuscarCodigo"
        android:layout_width="@dimen/btnCodigo"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:backgroundTint="@color/colorButton"
        android:text="@string/buscar"
        android:textColor="@color/colorTextButton"
        />


</FrameLayout>
